<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_horse"
    tools:context="com.example.alab.horseracing.Horseselect">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the horse(s) and betting"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/horse1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/horse"/>

        <TextView
            android:id="@+id/stats1"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:text="Speed          7\nStamina      7\nCondition    7\nWin Rate"
            android:layout_marginLeft="95dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="@drawable/text_background"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/money1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0$"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="55dp"
            android:textColor="#000000"
            android:textSize="30sp" />


        <ImageButton
            android:id="@+id/plusbutton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/plusbutton"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="95dp" />

        <ImageButton
            android:id="@+id/minusbutton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="140dp"
            android:background="@android:color/transparent"
            android:src="@drawable/minusbutton"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:id="@+id/relativeLayout2">

        <ImageView
