<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/select_horse"
    tools:context="com.example.alab.horseracing.Horseselect">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the horse(s) and betting"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/horse1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/horse"/>

        <TextView
            android:id="@+id/stats1"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:text="\nSpd\nStm\nCon\nWin Rate"
            android:layout_marginLeft="95dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="@drawable/text_background"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/money1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0$"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_alignTop="@+id/plusbutton1"
            android:layout_alignRight="@+id/horse1"
            android:layout_alignEnd="@+id/horse1"/>

        <TextView
            android:id="@+id/horsename1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.01"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/horse1"
            android:layout_alignEnd="@+id/horse1"/>


        <ImageButton
            android:id="@+id/plusbutton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/plusbutton"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="95dp"/>

        <ImageButton
            android:id="@+id/minusbutton1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="140dp"
            android:background="@android:color/transparent"
            android:src="@drawable/minusbutton"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/relativeLayout3">

        <ImageView
            android:id="@+id/horse2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/horse"/>

        <TextView
            android:id="@+id/stats2"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:text="\nSpd\nStm\nCon\nWin Rate"
            android:layout_marginLeft="95dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="@drawable/text_background"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/money2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0$"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_alignTop="@+id/plusbutton2"
            android:layout_alignRight="@+id/horse2"
            android:layout_alignEnd="@+id/horse2"/>

        <TextView
            android:id="@+id/horsename2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.02"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/horse2"
            android:layout_alignEnd="@+id/horse2"/>

        <ImageButton
            android:id="@+id/plusbutton2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/plusbutton"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="95dp"/>

        <ImageButton
            android:id="@+id/minusbutton2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="140dp"
            android:background="@android:color/transparent"
            android:src="@drawable/minusbutton"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="390dp"
        android:id="@+id/relativeLayout4">

        <ImageView
            android:id="@+id/horse3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/horse"/>

        <TextView
            android:id="@+id/stats3"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:text="\nSpd\nStm\nCon\nWin Rate"
            android:layout_marginLeft="95dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="@drawable/text_background"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/money3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0$"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_alignTop="@+id/plusbutton3"
            android:layout_alignRight="@+id/horse3"
            android:layout_alignEnd="@+id/horse3"/>

        <TextView
            android:id="@+id/horsename3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.03"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/horse3"
            android:layout_alignEnd="@+id/horse3"/>

        <ImageButton
            android:id="@+id/plusbutton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/plusbutton"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="95dp"/>

        <ImageButton
            android:id="@+id/minusbutton3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="140dp"
            android:background="@android:color/transparent"
            android:src="@drawable/minusbutton"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout"
        android:id="@+id/relativeLayout2">

        <ImageView
            android:id="@+id/horse4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/horse"/>

        <TextView
            android:id="@+id/stats4"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:text="\nSpd\nStm\nCon\nWin Rate"
            android:layout_marginLeft="95dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="@drawable/text_background"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/money4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0$"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_alignBottom="@+id/plusbutton4"
            android:layout_alignRight="@+id/horse4"
            android:layout_alignEnd="@+id/horse4"/>

        <TextView
            android:id="@+id/horsename4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.04"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/horse4"
            android:layout_alignEnd="@+id/horse4"/>

        <ImageButton
            android:id="@+id/plusbutton4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/plusbutton"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="95dp"/>

        <ImageButton
            android:id="@+id/minusbutton4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="140dp"
            android:background="@android:color/transparent"
            android:src="@drawable/minusbutton"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/relativeLayout2"
        android:layout_alignLeft="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relativeLayout3"
        android:id="@+id/relativeLayout5">

        <ImageView
            android:id="@+id/horse5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/horse"/>

        <TextView
            android:id="@+id/stats5"
            android:layout_width="85dp"
            android:layout_height="90dp"
            android:text="\nSpd\nStm\nCon\nWin Rate"
            android:layout_marginLeft="95dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="@drawable/text_background"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/money5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0$"
            android:gravity="left"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_alignTop="@+id/plusbutton5"
            android:layout_alignRight="@+id/horse5"
            android:layout_alignEnd="@+id/horse5"/>

        <TextView
            android:id="@+id/horsename5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.05"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/horse5"
            android:layout_alignEnd="@+id/horse5"/>

        <ImageButton
            android:id="@+id/plusbutton5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/plusbutton"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="95dp"/>


        <ImageButton
            android:id="@+id/minusbutton5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="140dp"
            android:background="@android:color/transparent"
            android:src="@drawable/minusbutton"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remainder"
        android:textColor="#FF0000"
        android:textSize="25sp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="450dp"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0$"
        android:layout_marginTop="39dp"
        android:textColor="#000000"
        android:textSize="45sp"
        android:layout_alignTop="@+id/relativeLayout5"
        android:layout_alignRight="@+id/relativeLayout4"
        android:layout_alignEnd="@+id/relativeLayout4"/>

    <ImageButton
        android:id="@+id/nextbutton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:src="@drawable/nextbutton"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="450dp"/>

</RelativeLayout>
