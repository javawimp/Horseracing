<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/winner"
    tools:context="com.example.alab.horseracing.Score">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Champion Horse"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textAllCaps="false"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/wonhorse"
        android:layout_width="96dp"
        android:layout_height="35dp"
        android:text=" No. 01"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/text_background"
        android:textAllCaps="false"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="370dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Earned"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:id="@+id/textView"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="350dp"/>

    <TextView
        android:id="@+id/earnedmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2000$"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_marginTop="200dp"
        android:layout_alignRight="@+id/textView" />

    <ImageView
        android:id="@+id/championhorse"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/champion_racehorse"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="60dp"/>

    <ImageButton
        android:id="@+id/againbutton"
        android:layout_width="96dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:src="@drawable/again"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="405dp"/>

</RelativeLayout>
